<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <!-- <style media="screen"> div.names { text-align: center; } .center { text-align: center; } </style> -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  </head>
  <body>
    <div class="names">

      <h1 class="display-1 text-center">Battle Screen</h1>

      <div class="container">

        <div class="row">
          <div class="col-sm">
            <div class="row">
              <div class="jumbotron col-sm-12">
                <h1 class="display-4 text-center"><%= @game.player1.name %></h1>
              </div>
            </div>
            <!-- <div class="row"> <%= @game.player1.hitpoints %> <br> </div> -->
            <div class="row">
              <div class="col-sm-12">
                <div class="progress">
                  <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: <%= @game.player1.hitpoints %>%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"><%= @game.player1.hitpoints %>HP</div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-sm align-items-center text-center">
            <h6>V.S</h6>
          </h6>
        </div>

        <div class="col-sm align-self-center">
          <div class="row">
            <div class="jumbotron col-sm-12">
              <h1 class="display-4 text-center"><%= @game.player2.name %></h1>
            </div>
          </div>
          <!-- <div class="row"> <%= @game.player1.hitpoints %> <br> </div> -->

          <div class="row">
            <div class="col-sm-12">
              <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: <%= @game.player1.hitpoints %>%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"><%= @game.player2.hitpoints %>HP</div>
              </div>
            </div>

          </div>
        </div>

      </div>

    </div>
    <br>
    <div class="row">
      <div class="col-sm">
        <div class="playerattack text-center">
          <form class="" action="/attackpage" method="get">
            <button type="submit" name="attack">Attack
            </button>
          </form>
        </div>

      </div>
    </div>

    <br>

  </div>
</body>
</html>